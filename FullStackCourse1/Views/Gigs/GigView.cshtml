@model FullStackCourse1.Core.ViewModels.GigDetailsViewModel
@{
    ViewBag.Title = "Gig Details";
}

<h2>Gig Details</h2>

<div class="gig-details">

    <span class="artist">@Model.Artist.Name 
    
    @if (Model.IsUserAuthorized)
    {
        if (Model.IsFollowing)
        {

            <button class="btn btn-info js-toggle-follow" data-artist-id="@Model.Artist.Id">Following</button>
        }
        else
        {

            <button class="btn btn-default js-toggle-follow" data-artist-id="@Model.Artist.Id">Follow</button>
        }
    }
    
    </span>

    <span class="gig-info">
        Performing at @Model.Venue on @Model.Datetime.ToString("d MMM HH:mm")
    </span>

    @if (Model.IsAttending)
    {
        <span class="gig-info">You are Going To this Event</span>
    }
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

            ArtistController.init();
        });
    </script>
    }

